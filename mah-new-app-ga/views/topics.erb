<% @topics.each do |topic| %>
  <h2><%= topic['title'] %> <%= topic['text'] %></h2>
<% end %>
<% if @submitted %>
<p class="topic-created">Thanks for your post!</p>

<% else %>
<div class="post_topics">
  <form class="" action="/topics" method="post">
    <div class="input-row">
  <label for="title">Title: </label>
  <input type="text" post="title" />
    </div>
    <div class="input-row">
  <label for="text">Text: </label>
  <input type="text" post="text" />
  <div class="input-row">
      <input type="submit" value="Send"/>
    </div>
  </form>
</div>

</div>
<% end %>
